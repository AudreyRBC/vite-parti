{
    "extends": "stylelint-config-standard-scss",
    "plugins": [
        "stylelint-scss",
        "stylelint-order"
    ],
    "rules": {
        "scss/dollar-variable-colon-space-after": null,
        "scss/dollar-variable-empty-line-before": null,
        "scss/dollar-variable-pattern": null,
        "selector-id-pattern": null,
        "color-named": "never",
        "selector-no-vendor-prefix": null,
        "no-invalid-double-slash-comments": null,
        "selector-class-pattern": null,
        "alpha-value-notation": "number",
        "no-empty-first-line": null,
        "no-invalid-position-at-import-rule": null,
        "function-no-unknown": null,
        "custom-property-pattern": null,
        "value-keyword-case": [
            "lower",
            {
                "camelCaseSvgKeywords": true
            }
        ],
      
        "selector-attribute-quotes": "always",
        "declaration-block-single-line-max-declarations": 5,
        "declaration-empty-line-before": null,
        "property-no-vendor-prefix": true,
        "value-no-vendor-prefix": true,
        "function-url-quotes": "always",
        "font-weight-notation": "numeric",
        "font-family-name-quotes": "always-unless-keyword",
        "comment-whitespace-inside": "always",
        "comment-empty-line-before": "always",
        "no-descending-specificity": null,
        "at-rule-no-vendor-prefix": true,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "mixin",
                    "media",
                    "content",
                    "forward",
                    "if",
                    "else",
                    "include",
                    "extend",
                    "for",
                    "function",
                    "return",
                    "use",
                    "each",
                    "at-root"
                ]
            }
        ],
        "at-rule-empty-line-before": [
            "always",
            {
                "except": [
                    "after-same-name",
                    "first-nested"
                ],
                "ignore": [
                    "after-comment",
                    "blockless-after-same-name-blockless"
                ],
                "ignoreAtRules": [
                    "include",
                    "else"
                ]
            }
        ],
        "rule-empty-line-before": [
            "always-multi-line",
            {
                "except": [
                    "first-nested"
                ],
                "ignore": [
                    "after-comment"
                ]
            }
        ],
        "length-zero-no-unit": null,
        "selector-pseudo-element-colon-notation": "double",
        "order/order": [
            "custom-properties",
            "declarations"
        ],
        "order/properties-order": [
            {
                "emptyLineBefore": "always",
                "properties": [
                    "content",
                    "counter-reset",
                    "counter-increment"
                ]
            },
            {
                "emptyLineBefore": "always",
                "properties": [
                    "position",
                    "top",
                    "right",
                    "bottom",
                    "left",
                    "z-index"
                ]
            },
            {
                "emptyLineBefore": "always",
                "properties": [
                    "display",
                    "grid-area",
                    "grid-template",
                    "grid-template-columns",
                    "grid-template-rows",
                    "grid-auto-rows",
                    "grid-template-areas",
                    "grid-gap",
                    "columns",
                    "column-gap",
                    "row-gap",
                    "vertical-align",
                    "align-self",
                    "flex",
                    "flex-shrink",
                    "flex-direction",
                    "flex-wrap",
                    "flex-basis",
                    "place-items",
                    "justify-content",
                    "align-items",
                    "order",
                    "gap"
                ]
            },
            {
                "emptyLineBefore": "always",
                "properties": [
                    "width",
                    "height",
                    "min-width",
                    "min-height",
                    "max-width",
                    "max-height"
                ]
            },
            {
                "emptyLineBefore": "always",
                "properties": [
                    "margin",
                    "margin-top",
                    "margin-right",
                    "margin-bottom",
                    "margin-left",
                    "padding",
                    "padding-top",
                    "padding-right",
                    "padding-bottom",
                    "padding-left"
                ]
            },
            {
                "emptyLineBefore": "always",
                "properties": [
                    "visibility",
                    "box-sizing",
                    "clear",
                    "float",
                    "appearance",
                    "background",
                    "background-image",
                    "background-repeat",
                    "background-size",
                    "background-position",
                    "background-color",
                    "border",
                    "border-width",
                    "border-style",
                    "border-color",
                    "border-top",
                    "border-right",
                    "border-right-width",
                    "border-right-style",
                    "border-right-color",
                    "border-bottom",
                    "border-bottom-width",
                    "border-bottom-style",
                    "border-bottom-color",
                    "border-left",
                    "border-left-width",
                    "border-left-style",
                    "border-left-color",
                    "border-radius",
                    "border-top-right-radius",
                    "border-bottom-right-radius",
                    "border-bottom-left-radius",
                    "border-top-left-radius",
                    "fill",
                    "stroke",
                    "stroke-width",
                    "stroke-linecap",
                    "outline",
                    "box-shadow",
                    "opacity",
                    "clip",
                    "clip-path"
                ]
            },
            {
                "emptyLineBefore": "always",
                "properties": [
                    "font-smoothing",
                    "text-rendering",
                    "white-space",
                    "text-align",
                    "text-indent",
                    "font",
                    "font-family",
                    "font-style",
                    "font-size",
                    "font-weight",
                    "line-height",
                    "text-shadow",
                    "text-decoration",
                    "text-transform",
                    "letter-spacing",
                    "color"
                ]
            },
            {
                "emptyLineBefore": "always",
                "properties": [
                    "cursor",
                    "pointer-events",
                    "overflow-scrolling",
                    "overflow",
                    "overflow-x",
                    "overflow-y",
                    "overflow-scrolling"
                ]
            },
            {
                "emptyLineBefore": "always",
                "properties": [
                    "will-change",
                    "backface-visibility",
                    "transform-origin",
                    "transform",
                    "animation",
                    "transition",
                    "transition-property",
                    "transition-duration",
                    "transition-delay"
                ]
            }
        ]
    }
}